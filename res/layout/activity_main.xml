<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scrapbooking.MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="22dp"
        android:src="@drawable/eiffeltower" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentBottom="true"
        android:src="@drawable/leaningtower" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/statueofliberty" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bigben" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:rowCount="8" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:contentDescription="@string/ben"
            android:ems="10"
            android:text="@string/ben" />

        <EditText
            android:id="@+id/editText3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="4"
            android:contentDescription="@string/liberty"
            android:text="@string/liberty" />

        <EditText
            android:id="@+id/editText4"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:contentDescription="@string/tower"
            android:text="@string/tower" />

        <EditText
            android:id="@+id/editText2"
            android:layout_column="0"
            android:layout_gravity="right|top"
            android:layout_row="2"
            android:contentDescription="@string/pisa"
            android:text="@string/pisa" >

            <requestFocus />
        </EditText>
    </GridLayout>

</RelativeLayout>